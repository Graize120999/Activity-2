// Create a program that shows mm - dd - yyyy

#include <iostream>
#include <cmath>
#include <string>
#include <conio.h>

using namespace std; 

int main ()
{
	int day, month, year; 
	
	cout << "\t\t\t\t~~~Hello and Welcome, Let's Output A Date~~~\n" << endl;
	
	cout << "~The Output Depends on the Integers You Input~\n" << endl; 
	cout << "The [Month] is dependent on the repesented number" << endl;
	cout << "The [Days] is dependent on the equivalent number of the Month" << endl;
	cout << "The [Year] is dependent on what you have choosen\n" << endl;
	
	cout << "\tMonths and its equivalent Days:" << endl;
	
	cout << "1: January = 31 days\t 7: July = 31 days\n";
	cout << "2: Febuary = 28 days\t 8: August = 31 days\n"; 
	cout << "3: March = 31 days\t 9: September = 30 days\n";
	cout << "4: April = 30 days\t 10: October = 31 days\n";
	cout << "5: May = 31 days\t 11: November = 30 days\n";
	cout << "6: June = 30 days\t 12: December = 31 days\n";
	cout << "\n";
	
	cout << "Enter Month: ";cin>>month;
	cout << "Enter Day: ";cin>>day;
	cout << "Enter Year: ";cin>>year;
	
	cout << "\n";
	cout << "-------------------------------------------------------------" << endl;
	
	if (month == 1 && day <=31)
		cout << "January " << day << ", " << year; 
		
	else if (month == 2 && day <=28)
		cout << "Febuary " << day << ", " << year;
		
	else if (month == 3 && day <=31)
		cout << "March " << day << ", " << year; 
	
	else if (month == 4 && day <=30)
		cout << "April " << day << ", " << year;
		
	else if (month == 5 && day <=31)
		cout << "May " << day << ", " << year;
		
	else if (month == 6 && day <=30)
		cout << "June " << day << ", " << year;
		
	else if (month == 7 && day <=31)
		cout << "July " << day << ", " << year;
		
	else if (month == 8 && day <=31)
		cout << "August " << day << ", " << year;
		
	else if (month == 9 && day <=30)
		cout << "September " << day << ", " << year;
		
	else if (month == 10 && day <=31)
		cout << "October " << day << ", " << year;
	
	else if (month == 11 && day <=30)
		cout << "November " << day << ", " << year;
	
	else if (month == 12 && day <=31)
		cout << "December " << day << ", " << year;
		
	else 
	 	cout << "You Have Entered an Invalid Date...\nPlease Try Again"; 
	 	
	_getch ();
	return 0;
}
